###########################################################################
# This is a reduced version of the standard Flutter gradlew script.
# Its main purpose here is to satisfy the GitHub Action build environment.
###########################################################################

# Determine the directory containing this script
PRG="$0"
while [ -h "$PRG" ] ; do
  ls=`ls -ld "$PRG"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
  else
    PRG=`dirname "$PRG"`/"$link"
  fi
done

GRADLE_WRAPPER_JAR="$(dirname "$PRG")/gradle/wrapper/gradle-wrapper.jar"

# Set up Gradle parameters
GRADLE_OPTS="-Dorg.gradle.daemon=false -Dorg.gradle.jvmargs=-Xmx1024m"

# Execute Gradle
exec java $GRADLE_OPTS -jar "$GRADLE_WRAPPER_JAR" "$@"
